<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_monster2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wilder.app_wcs_se_monster_project.CreateMonster2">


    <Button
        android:text="@string/back_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/back_menu_button"
        android:background="@color/colorPrimaryDark"/>

    <Button
        android:text="@string/valider_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/back_menu_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/valider_create_button"
        android:background="@color/colorPrimaryDark"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_stamina"
        android:id="@+id/imageView9"
        android:layout_below="@+id/imageView8"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/create_stat_power"
        android:hint="@string/add_monster_power"
        android:textColorHint="@color/textColor"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/create_stat_stamina"
        android:layout_alignLeft="@+id/create_stat_life"
        android:layout_alignStart="@+id/create_stat_life" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/create_stat_speed"
        android:hint="@string/add_monster_speed"
        android:textColorHint="@color/textColor"
        android:layout_below="@+id/imageView7"
        android:layout_alignLeft="@+id/create_stat_power"
        android:layout_alignStart="@+id/create_stat_power" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/create_stat_stamina"
        android:hint="@string/add_monster_stamina"
        android:textColorHint="@color/textColor"
        android:layout_marginBottom="39dp"
        android:layout_above="@+id/back_menu_button"
        android:layout_alignLeft="@+id/create_stat_speed"
        android:layout_alignStart="@+id/create_stat_speed" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/create_stat_life"
        android:hint="@string/add_monster_life"
        android:textColorHint="@color/textColor"
        android:layout_above="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_power"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/create_stat_power"
        android:layout_toLeftOf="@+id/create_stat_power"
        android:layout_toStartOf="@+id/create_stat_power" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_life"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/create_stat_life"
        android:layout_toLeftOf="@+id/create_stat_power"
        android:layout_toStartOf="@+id/create_stat_power" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stat_speed"
        android:id="@+id/imageView8"
        android:layout_below="@+id/imageView7"
        android:layout_toLeftOf="@+id/create_stat_speed"
        android:layout_toStartOf="@+id/create_stat_speed" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icone"
        android:layout_marginBottom="106dp"
        android:id="@+id/imageView10"
        android:layout_above="@+id/create_stat_life"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <TextView
        android:text="@string/pick_stats_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_stat_life"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:textAllCaps="true"
        android:background="@color/colorPrimaryDark"
        android:padding="4dp"
        android:textColor="#FFFFFF"
        android:id="@+id/pick_stats_text"
        android:textAlignment="center"/>

    <Button
        android:text="@string/back_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_stat_stamina"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_menu_button"
        android:background="@color/colorPrimaryDark"/>


</RelativeLayout>
