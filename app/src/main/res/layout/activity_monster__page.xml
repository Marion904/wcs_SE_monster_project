<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_monster__page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wilder.app_wcs_se_monster_project.Monster_Page">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/type_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/stat_life_text"
            android:text="@string/add_monster_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:textColor="@color/textColor"/>

        <ImageView
            android:id="@+id/stat_life_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/stat_life"
            android:layout_alignBottom="@+id/stat_life_text"
            android:layout_toLeftOf="@+id/stat_life_text"
            android:layout_toStartOf="@+id/stat_life_text" />

        <TextView
            android:id="@+id/stat_power_text"
            android:text="@string/add_monster_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/stat_life_text"
            android:textColor="@color/textColor"/>

        <ImageView
            android:id="@+id/stat_power_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/stat_power"
            android:layout_below="@+id/stat_life_text"
            android:layout_toLeftOf="@+id/stat_power_text"
            android:layout_toStartOf="@+id/stat_power_text"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/stat_speed_text"
            android:text="@string/add_monster_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/stat_power_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textColor"/>

        <ImageView
            android:id="@+id/stat_speed_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/stat_speed"
            android:layout_below="@id/stat_power_text"
            android:layout_toLeftOf="@+id/stat_speed_text"
            android:layout_toStartOf="@+id/stat_speed_text"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/stat_stamina_text"
            android:text="@string/add_monster_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/stat_speed_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/textColor"/>

        <ImageView
            android:id="@+id/stat_stamina_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/stat_stamina"
            android:layout_below="@id/stat_speed_text"
            android:layout_toLeftOf="@+id/stat_stamina_text"
            android:layout_toStartOf="@+id/stat_stamina_text"
            android:layout_marginTop="25dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/back_menu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:text="@string/back_menu_button"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="@string/back_list_button"
            android:id="@+id/back_collection_button"
            android:layout_above="@+id/back_menu_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:id="@+id/textView2"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monster_name"
        android:textStyle="bold"
        android:textSize="@dimen/monster_name"
        android:textColor="@color/textColor"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
