<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_monster"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.wilder.app_wcs_se_monster_project.CreateMonsterActivity">


    <Button
        android:text="@string/save_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_monster_name_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/save_name_button"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/activity_vertical_margin"/>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/add_monster_name"
        android:textColorHint="@color/textColor"
        android:textColor="@color/textColor"
        android:ems="10"
        android:id="@+id/add_monster_name_edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/save_name_button">

        <TextView
            android:text="@string/chose_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/special_image_button"
            android:background="@drawable/special"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/foudre_image_button"
            android:layout_alignLeft="@+id/nature_image_button"
            android:layout_alignStart="@+id/nature_image_button" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/light_image_button"
            android:background="@drawable/lumiere"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/nature_image_button"
            android:layout_alignStart="@+id/nature_image_button" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/nature_image_button"
            android:background="@drawable/nature"
            android:layout_below="@+id/light_image_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />

        <ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/foudre_image_button"
    android:background="@drawable/foudre"
            android:layout_alignTop="@+id/nature_image_button"
            android:layout_alignLeft="@+id/magic_image_button"
            android:layout_alignStart="@+id/magic_image_button" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/magic_image_button"
            android:background="@drawable/magie"
            android:layout_alignTop="@+id/light_image_button"
            android:layout_toRightOf="@+id/light_image_button"
            android:layout_toEndOf="@+id/light_image_button"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" />

        <ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/death_image_button"
    android:background="@drawable/mort"
            android:layout_alignTop="@+id/special_image_button"
            android:layout_alignLeft="@+id/foudre_image_button"
            android:layout_alignStart="@+id/foudre_image_button" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/eau"
            android:id="@+id/water_image_button"
            android:layout_alignTop="@+id/special_image_button"
            android:layout_toLeftOf="@+id/special_image_button"
            android:layout_toStartOf="@+id/special_image_button"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

        <ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/metal_image_button"
    android:background="@drawable/metal"
            android:layout_alignTop="@+id/nature_image_button"
            android:layout_alignLeft="@+id/water_image_button"
            android:layout_alignStart="@+id/water_image_button" />

        <ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/fire_image_button"
    android:background="@drawable/feu"
            android:layout_alignTop="@+id/light_image_button"
            android:layout_alignLeft="@+id/metal_image_button"
            android:layout_alignStart="@+id/metal_image_button" />
    </RelativeLayout>

    <Button
        android:text="@string/back_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:id="@+id/main_menu_button"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/save_name_button"
        android:layout_alignStart="@+id/save_name_button"
        android:layout_marginBottom="18dp" />

</RelativeLayout>
